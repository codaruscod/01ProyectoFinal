<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Editar un juguete </h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post"  enctype="multipart/form-data">

                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text"> Nombre juguete </label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: Cristhian David" value="{{persona.name}}" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="proveedor" class="input-group-text"> proveedor </label>
                            <input class="form-control" type="text" name="proveedor" id="proveedor" placeholder="Ejemplo: Galvis Cardona" value="{{persona.proveedor}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="cantidad" class="input-group-text"> Cantidad recibida </label>
                            <input class="form-control" type="number" name="cantidad" id="cantidad" placeholder="0" value="{{persona.cantidad}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="observacion" class="input-group-text"> Observacion </label>
                            <input class="form-control" type="text" name="observacion" id="observacion" value="{{persona.observacion}}" placeholder="Escriba una observacion" required >
                        </div>

                        <div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>

                        {{#if persona.imagen}}
                            <div class="input-group mt-2">
                                <img src="/uploads/{{persona.imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </div>
                        {{/if}}

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>