<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Editar una subscripcion</h3>
                </div>
                <div class="card-body">
                    <form action="/editsub/{{sub.id}}" method="post"  enctype="multipart/form-data">

                        <div class="input-group mt-2">
                            <label for="sub" class="input-group-text"> Nombre subscripcion </label>
                            <input class="form-control" type="text" name="sub" id="sub" placeholder="Ejemplo: basica, medium" value="{{sub.sub}}" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="description" class="input-group-text"> descripcion </label>
                            <input class="form-control" type="text" name="description" id="description" placeholder="Ejemplo: basica media" value="{{sub.description}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="cantidad" class="input-group-text"> Cantidad recibida </label>
                            <input class="form-control" type="number" name="price" id="price" placeholder="0" value="{{sub.price}}" required >
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>